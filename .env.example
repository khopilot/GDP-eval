# GDPval Framework Environment Configuration
# Copy this file to .env and fill in your API keys

# ====================
# Free API Keys
# ====================

# Hugging Face (Free tier available)
# Get your API key from: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=

# Google Gemini (Free tier: 60 requests/minute)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=

# World Bank API (No key required, but you can register)
# Register at: https://datahelpdesk.worldbank.org/knowledgebase/articles/889392
WORLD_BANK_API_KEY=

# Exchange Rate API (Free tier: 1500 requests/month)
# Get your API key from: https://app.exchangerate-api.com/sign-up
EXCHANGE_RATE_API_KEY=

# IMF Data API (No key required)
IMF_API_ENDPOINT=https://www.imf.org/external/datamapper/api/v1

# ====================
# Optional Paid APIs
# ====================

# OpenAI (Optional - for comparison)
OPENAI_API_KEY=

# Anthropic Claude (Optional - for comparison)
ANTHROPIC_API_KEY=

# Cohere (Optional - has limited free tier)
COHERE_API_KEY=

# ====================
# Model Configuration
# ====================

# Default model to use (free options)
# Options: huggingface/mistralai/Mistral-7B-Instruct-v0.2, google/gemini-pro, ollama/llama2
DEFAULT_MODEL=huggingface/mistralai/Mistral-7B-Instruct-v0.2

# Fallback model if primary fails
FALLBACK_MODEL=ollama/llama2

# Maximum tokens for generation
MAX_TOKENS=2048

# Temperature for generation (0.0-1.0)
TEMPERATURE=0.7

# ====================
# Local Services
# ====================

# Ollama (Local LLM) - Install from https://ollama.ai
OLLAMA_URL=http://localhost:11434

# LibreTranslate (Self-hosted translation)
# Run with: docker run -ti --rm -p 5000:5000 libretranslate/libretranslate
LIBRE_TRANSLATE_URL=http://localhost:5000

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379/0

# ====================
# API Rate Limits (requests per minute)
# ====================

# Configure rate limits for free tiers
HUGGINGFACE_RATE_LIMIT=30
GEMINI_RATE_LIMIT=60
EXCHANGE_RATE_LIMIT=25
WORLD_BANK_RATE_LIMIT=100

# ====================
# Caching Configuration
# ====================

# Enable API response caching
ENABLE_CACHE=true

# Cache directory
CACHE_DIR=.cache

# Cache TTL in seconds (default: 1 hour)
CACHE_TTL=3600

# ====================
# Evaluation Settings
# ====================

# Output directory for results
OUTPUT_DIR=outputs

# Data directory for tasks
DATA_DIR=data

# Maximum concurrent API calls
MAX_CONCURRENT_CALLS=5

# Enable economic analysis
ENABLE_ECONOMIC_ANALYSIS=true

# Enable bilingual evaluation
ENABLE_BILINGUAL_EVAL=true

# ====================
# Monitoring & Logging
# ====================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Log file location
LOG_FILE=logs/gdpval.log

# Enable metrics collection
ENABLE_METRICS=true

# Metrics export port (for Prometheus)
METRICS_PORT=8000

# ====================
# Database Configuration
# ====================

# SQLite database for storing results
DATABASE_URL=sqlite:///gdpval_results.db

# ====================
# Web UI Configuration
# ====================

# Gradio server settings
GRADIO_SERVER_PORT=7860
GRADIO_SERVER_NAME=0.0.0.0

# Streamlit settings (alternative UI)
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost

# ====================
# Development Settings
# ====================

# Debug mode
DEBUG=false

# Test mode (uses mock data)
TEST_MODE=false

# Dry run (no actual API calls)
DRY_RUN=false

# ====================
# Khmer Language Settings
# ====================

# Enable Khmer text validation
VALIDATE_KHMER=true

# Minimum Khmer content percentage for bilingual tasks
MIN_KHMER_PERCENTAGE=30

# Khmer font for PDF generation
KHMER_FONT_PATH=fonts/KhmerOS.ttf

# ====================
# Economic Data Sources
# ====================

# National Bank of Cambodia RSS Feed
NBC_RSS_FEED=https://www.nbc.gov.kh/english/rss

# Cambodia Ministry of Economy and Finance
MEF_API_ENDPOINT=

# ASEAN Stats Data Portal
ASEAN_STATS_API=https://data.aseanstats.org/api

# ====================
# Security Settings
# ====================

# Enable API key rotation
ROTATE_API_KEYS=false

# API key rotation interval (hours)
KEY_ROTATION_INTERVAL=24

# Encrypt sensitive data in cache
ENCRYPT_CACHE=false

# ====================
# Feature Flags
# ====================

# Enable experimental features
ENABLE_EXPERIMENTAL=false

# Use GPU for local models (if available)
USE_GPU=true

# Enable multilingual support
ENABLE_MULTILINGUAL=true

# Enable real-time evaluation
ENABLE_REALTIME_EVAL=false